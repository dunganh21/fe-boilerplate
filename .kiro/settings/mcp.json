{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@automatalabs/mcp-server-playwright"
      ],
      "disabled": false,
      "autoApprove": [
        "browser_navigate",
        "browser_click",
        "browser_evaluate",
        "browser_evaluate",
        "browser_screenshot",
        "browser_select",
        "browser_hover",
        "browser_click_text",
        "browser_hover_text"
      ]
    }
  }
}